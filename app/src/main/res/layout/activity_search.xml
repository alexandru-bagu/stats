<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ow.stats.SearchActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:background="@drawable/search_background"
        android:gravity="bottom|center"
        android:weightSum="2"
        android:id="@+id/ow_main_layout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BATTLE.NET TAG"
            android:textSize="25dp"
            android:background="#00000000"
            android:textColor="@color/darkColorText2"
            />
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            android:gravity="center"
            android:background="#00000000"
            android:id="@+id/ow_secondary_layout">

            <EditText
                android:id="@+id/ow_battletag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:ems="10"
                android:inputType="text"
                android:text=""
                android:backgroundTint="@color/darkColorAccent"
                android:textColor="@color/darkColorText"
                />
        </LinearLayout>

        <Button
            android:id="@+id/ow_search_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="Search"/>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
